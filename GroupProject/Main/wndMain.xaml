<Window x:Class="GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Menu Margin="0,0,0,0.5">
			<MenuItem Header="Menu">
				<MenuItem Header="Update" Click="UpdateMenuItem_Click"/>
				<MenuItem Header="Search Invoice" Click="SearchMenuItem_Click"/>
			</MenuItem>
		</Menu>
		<Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="52,135,0,0" VerticalAlignment="Top" Width="120" Click="addButton_Click" Height="26" RenderTransformOrigin="-0.377,0.327"/>
		<Button x:Name="updateButton" Content="Update" HorizontalAlignment="Left" Margin="52,194,0,0" VerticalAlignment="Top" Width="120" Click="updateButton_Click" Height="26"/>
		<Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="52,250,0,0" VerticalAlignment="Top" Width="120" Click="deleteButton_Click" Height="26"/>
	</Grid>
</Window>
