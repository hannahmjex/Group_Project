<Window x:Class="GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Menu Margin="0,0,0,0.5">
			<MenuItem Header="Menu">
				<MenuItem Header="Update" Click="UpdateMenuItem_Click"/>
				<MenuItem Header="Search Invoice" Click="SearchMenuItem_Click" Margin="0,0,-3,0"/>
			</MenuItem>
		</Menu>
		<Label Content="Invoice Number:" Margin="250,69,449,326.5"/>
		<DataGrid x:Name="dgInvoice" Margin="250,108,203,23.5" IsEnabled="False"/>
		<ComboBox x:Name="cboItemSelection" Margin="250,28,357,358.5" IsEnabled="False" SelectionChanged="cboItemSelection_SelectionChanged"/>
		<Button x:Name="addItemButton" IsEnabled="False" Content="Add Item" HorizontalAlignment="Left" Margin="633,28,0,0" VerticalAlignment="Top" Width="120" Click="addButton_Click" Height="28"/>
		<Button x:Name="newButton" Content="New Invoice" HorizontalAlignment="Left" Margin="52,138,0,0" VerticalAlignment="Top" Width="120" Click="newButton_Click" Height="26" RenderTransformOrigin="-0.377,0.327"/>
		<Button x:Name="editButton" IsEnabled="False" Content="Edit Invoice" HorizontalAlignment="Left" Margin="52,194,0,0" VerticalAlignment="Top" Width="120" Click="editButton_Click" Height="26"/>
		<Button x:Name="deleteButton" IsEnabled="False" Content="Delete Invoice" HorizontalAlignment="Left" Margin="52,250,0,0" VerticalAlignment="Top" Width="120" Click="deleteButton_Click" Height="26"/>
		<Button x:Name="saveButton" IsEnabled="False" Content="Save Invoice" HorizontalAlignment="Left" Margin="633,194,0,0" VerticalAlignment="Top" Width="120" Click="saveButton_Click" Height="26"/>
		<Button x:Name="removeItemButton" Visibility="Hidden" IsEnabled="False" Content="Remove Item" HorizontalAlignment="Left" Margin="633,44,0,0" VerticalAlignment="Top" Width="120" Click="removeItemButton_Click" Height="28"/>
		<TextBox x:Name="costTextbox" IsReadOnly="true" TextWrapping="Wrap" Text="" Margin="540,30,221,366.5"/>
		<Label Content="Item Cost: $" Margin="460,28,260,368.5" RenderTransformOrigin="0.441,0.462"/>
		<Label Content="TBD" Margin="351,69,411,326.5"/>
		<Label Content="Invoice Date:" Margin="415,69,300,326.5"/>
		<TextBox x:Name="invoiceDateTextbox" TextWrapping="Wrap" Text="" Margin="500,74,203,326.5" VerticalAlignment="Center" Height="22"/>
		<TextBox x:Name="totalTextbox" IsReadOnly="true" TextWrapping="Wrap" Text="" Margin="685,252,62,144.5"/>
		<Label Content="Total: $" Margin="633,252,110,143.5"/>
	</Grid>
</Window>
