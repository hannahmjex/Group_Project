<Window x:Class="GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,0.5">
            <MenuItem Header="Menu">
                <MenuItem Header="Update" Click="UpdateMenuItem_Click"/>
                <MenuItem Header="Search Invoice" Click="SearchMenuItem_Click" Margin="0,0,-3,0"/>
            </MenuItem>
        </Menu>
        <DataGrid Margin="250,108,203,22.5" IsEnabled="False"/>
        <ComboBox Margin="250,44,357,350.5" IsEnabled="False">
            <Label Content="Diamond Fashion Ring" Height="27" Width="138"/>
            <Label Content="Precious Stone Ring" Height="24" Width="90"/>
            <Label Content="Semi Precious Stone Ring" Height="27" Width="148"/>
            <Label Content="Pearl Ring" Height="27" Width="90"/>
            <Label Content="Mothers Ring" Height="27" Width="90"/>
            <Label Content="Black Hills Gold Ring" Height="27" Width="130"/>
            <Label Content="Sterling Silver Ring" Height="27" Width="114"/>
            <Label Content="Wrap" Height="27" Width="90"/>
            <Label Content="Solitare" Height="27" Width="90"/>
            <Label Content="Chain" Height="27" Width="90"/>
            <Label Content="Rope Chain" Height="27" Width="90"/>
            <Label Content="Pendant" Height="27" Width="90"/>
            <Label Content="Earrings" Height="27" Width="90"/>
            <Label Content="Charm Bracelet" Height="27" Width="148"/>
            <Label Content="Tennis Bracelet" Height="27" Width="148"/>
            <Label Content="Miscellaneous" Height="27" Width="148"/>
            <Label Content="Trio Set" Height="27" Width="90"/>
            <Label Content="Band" Height="27" Width="90"/>
            <Label Content="GTS Band" Height="27" Width="90"/>
            <Label Content="Bracelet" Height="27" Width="90"/>
            <Label Content="Diamond Necklace" Height="27" Width="148"/>
            <Label Content="GTS Ring w/Stones" Height="27" Width="148"/>
            <Label Content="Bridal" Height="27" Width="90"/>
            <Label Content="Anniversary Band" Height="27" Width="148"/>
            <Label Content="Platinum" Height="27" Width="90"/>
            <Label Content="GTS Platinum" Height="27" Width="148"/>
        </ComboBox>
        <Button x:Name="addItemButton" IsEnabled="False" Content="Add Item" HorizontalAlignment="Left" Margin="472,44,0,0" VerticalAlignment="Top" Width="120" Click="addButton_Click" Height="28"/>
        <Button x:Name="newButton" Content="New Invoice" HorizontalAlignment="Left" Margin="52,135,0,0" VerticalAlignment="Top" Width="120" Click="newButton_Click" Height="26" RenderTransformOrigin="-0.377,0.327"/>
        <Button x:Name="editButton" IsEnabled="False" Content="Edit Invoice" HorizontalAlignment="Left" Margin="52,194,0,0" VerticalAlignment="Top" Width="120" Click="editButton_Click" Height="26"/>
        <Button x:Name="deleteButton" IsEnabled="False" Content="Delete Invoice" HorizontalAlignment="Left" Margin="52,258,0,0" VerticalAlignment="Top" Width="120" Click="deleteButton_Click" Height="26"/>
        <Button x:Name="saveButton" IsEnabled="False" Content="Save Invoice" HorizontalAlignment="Left" Margin="633,194,0,0" VerticalAlignment="Top" Width="120" Click="saveButton_Click" Height="26"/>
        <Button x:Name="removeItemButton" Visibility="Hidden" IsEnabled="False" Content="Remove Item" HorizontalAlignment="Left" Margin="633,44,0,0" VerticalAlignment="Top" Width="120" Click="removeItemButton_Click" Height="28"/>
    </Grid>
</Window>
